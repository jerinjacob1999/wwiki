<!DOCTYPE html>
<html>
    <head>
        {{!-- Document Settings --}}
        <meta charset="UTF-8" />
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" /> {{!-- Page Meta --}}
        <meta name="HandheldFriendly" content="true"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="black">

        <title>{{meta_title}}</title>

        <link rel="stylesheet" type="text/css" href="{{asset "gitbook322/style.css"}}">
        <link rel="stylesheet" type="text/css" href="{{asset "gitbook322/gitbook-plugin-highlight/website.css"}}">
        <link rel="stylesheet" type="text/css" href="{{asset "gitbook322/gitbook-plugin-search/search.css"}}">
        <link rel="stylesheet" type="text/css" href="{{asset "gitbook322/gitbook-plugin-fontsettings/website.css"}}">
        <style type="text/css">
          .hidden{
            display: none;
          }
          .blog-title{
                margin: 0 auto 16px;
                margin: 0 auto 1rem;
                font-size: 24px;
                font-size: 1.5rem;
                font-weight: 300;
                text-align: center;
          }
        </style>
        {{!-- Ghost outputs important style and meta data with this tag --}}
        {{ghost_head}}
    </head>

    <body class="{{body_class}}">

        <div class="book">
            <!-- 目录 -->
            <div class="book-summary" id="J-blog-tree">

                <!-- 搜索框 -->
                <div id="book-search-input" role="search">
                  <form>
                    <input type="text" placeholder="搜索" id="search-field">
                  </form>
                </div>

                <nav role="navigation">
                  <ul class="summary" id="J-blog-tree-tags">
                    <li>
                        <h1 class="blog-title"><a href="/">{{@blog.title}}</a></h1>
                    </li>
                    <li class="divider"></li>

                    {{#get "tags" limit="all" order="name" }}
                      {{#foreach tags}}
                        <li class="chapter">
                          <span>{{name}}</span>
                          <!-- J-blog-tree-posts 将对应的文章拷贝到 tag 下 -->
                          <ul class="articles J-blog-tree-posts" data-tag="{{name}}"></ul>
                        </li>
                      {{/foreach}}
                    {{/get}}

                    <li class="divider"></li>

                    <!-- J-untaged-posts 没有分类的文章列表 -->
                    <div class="J-untaged-posts"></div>

                    <li class="divider"></li>

                    <li>
                      <a class="gitbook-link" target="blank" href="https://github.com/whaios/wwiki">
                        本书使用 wwiki 发布
                        </a>
                    </li>
                  </ul>
                </nav>

                <!-- J-posts-all-hidden 所有文章列表，不显示在页面上 -->
                <div id="J-posts-all-hidden" class="hidden">
                  {{#get "posts" include="tags" order="title" }}
                    {{#foreach posts}}
                      <!-- J-post 文章，data-slug 文章标识 -->
                      <li class="chapter J-post" data-slug="{{slug}}">
                        <a href="/{{slug}}/" data-id="{{id}}" title="{{title}}">{{title}}</a>
                        <div class="post-tags hidden">
                          {{#foreach tags}}
                            <span class="J-tag">{{name}}</span>
                          {{/foreach}}
                        </div>
                      </li>
                    {{/foreach}}
                  {{/get}}
                </div>
            </div>

            <!-- 文章内容区域 -->
            <div class="book-body">
                <div class="body-inner">
                    <!-- 头部区域 -->
                    <div class="book-header" role="navigation">
                        <h1 style="opacity: 1;">
                            <i class="fa fa-circle-o-notch fa-spin"></i>
                            <a href="#">{{meta_title}}</a>
                        </h1>
                    </div>

                    <div class="page-wrapper" tabindex="-1" role="main">
                        <div class="page-inner">
                            <!-- class=open 显示查询结果，否则显示文章内容 -->
                            <div id="book-search-results">
                                <div class="search-noresults">
                                    {{{body}}}
                                </div>

                                <div class="search-results">
                                    <ul class="search-results-list"></ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <script>
                var gitbook = gitbook || [];
                gitbook.push(function() {
                    gitbook.page.hasChanged({
                      "page":{
                        "title":"{{meta_title}}"
                        },
                        "config":{
                          "gitbook":"*",
                          "theme":"default",
                          "variables":{},
                          "plugins":["livereload"],
                          "pluginsConfig":{
                            "livereload":{},
                            "highlight":{},
                            "search":{},
                            "lunr":{"maxIndexSize":1000000,"ignoreSpecialCharacters":false},
                            "sharing":{
                              "all":[]
                            },
                            "fontsettings":{"theme":"white","family":"sans","size":2},
                            "theme-default":{"styles":{"website":"styles/website.css","pdf":"styles/pdf.css","epub":"styles/epub.css","mobi":"styles/mobi.css","ebook":"styles/ebook.css","print":"styles/print.css"},"showLevel":false}},
                            "structure":{"langs":"LANGS.md","readme":"README.md","glossary":"GLOSSARY.md","summary":"SUMMARY.md"},
                            "pdf":{"pageNumbers":true,"fontSize":12,"fontFamily":"Arial","paperSize":"a4","chapterMark":"pagebreak","pageBreaksBefore":"/",
                            "margin":{"right":62,"left":62,"top":56,"bottom":56}},
                            "styles":{"website":"styles/website.css","pdf":"styles/pdf.css","epub":"styles/epub.css","mobi":"styles/mobi.css","ebook":"styles/ebook.css","print":"styles/print.css"}},
                            "file":{
                            },
                            "gitbook":{"version":"3.2.3"},
                            "basePath":".",
                            "book":{"language":""}
                      });
                });
            </script>
        </div>

        <script type="text/javascript" src="{{asset "gitbook322/gitbook.js"}}"></script>
        <script type="text/javascript" src="{{asset "gitbook322/theme.js"}}"></script>
        {{!-- <script type="text/javascript" src="{{asset "gitbook322/gitbook-plugin-livereload/plugin.js"}}"></script> --}}
        {{!-- <script type="text/javascript" src="{{asset "gitbook322/gitbook-plugin-search/search-engine.js"}}"></script> --}}
        {{!-- <script type="text/javascript" src="{{asset "gitbook322/gitbook-plugin-search/search.js"}}"></script> --}}
        {{!-- <script type="text/javascript" src="{{asset "gitbook322/gitbook-plugin-lunr/lunr.min.js"}}"></script> --}}
        {{!-- <script type="text/javascript" src="{{asset "gitbook322/gitbook-plugin-lunr/search-lunr.js"}}"></script> --}}
        <script type="text/javascript" src="{{asset "gitbook322/gitbook-plugin-sharing/buttons.js"}}"></script>
        <script type="text/javascript" src="{{asset "gitbook322/gitbook-plugin-fontsettings/fontsettings.js"}}"></script>

        <script type="text/javascript" src="{{asset "js/jquery-3.2.1.min.js"}}"></script>
        <script type="text/javascript" src="{{asset "js/blog-tree.js"}}"></script>
        <script type="text/javascript" src="{{asset "plugin/prism.js"}}"></script>
        <script type="text/javascript" src="{{asset "plugin/jquery.ghosthunter.js"}}"></script>
        <script type="text/javascript" src="{{asset "js/search.js"}}"></script>

        {{ghost_foot}}
    </body>
</html>
